<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="@color/light_grey"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:id="@+id/card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:text="#888888"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="10/01/2023"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/text_id"
            app:layout_constraintEnd_toEndOf="@+id/text_value_total"
            app:layout_constraintStart_toStartOf="@+id/text_value_total" />

        <View
            android:id="@+id/view2"
            android:layout_width="6dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_button_radius_10"
            android:backgroundTint="#81768F32"
            app:layout_constraintStart_toStartOf="@+id/text_id"
            app:layout_constraintTop_toBottomOf="@+id/text_id" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:includeFontPadding="false"
            android:text="Aguardando"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_value_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:text="Total"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="@+id/text_value"
            app:layout_constraintStart_toStartOf="@+id/text_value"
            app:layout_constraintTop_toBottomOf="@+id/text_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="R$ 80,00"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginEnd="12dp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_value_total" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="12dp"
            android:includeFontPadding="false"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent non porta mauris."
            android:textColor="@color/black"
            android:textSize="11sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_value"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>